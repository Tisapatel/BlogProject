<!doctype html>
<html lang="en">

<head>
  <title>Sign Up</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous" />
  <style>
    body {
      background: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }

    .card {
      width: 800px;
      border-radius: 16px;
      padding: 2.5rem;
      background: #fff;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      transition: all 0.4s ease;
    }

    .form-floating-group {
      position: relative;
      margin-bottom: 1.5rem;
    }

    .form-floating-group input {
      width: 100%;
      border-radius: 50px;
      border: 1px solid #ccc;
      padding: 14px 20px;
      font-size: 14px;
      background: transparent;
      transition: all 0.3s ease;
    }

    .form-floating-group input:focus {
      border-color: #0d6efd;
      outline: none;
    }

    .form-floating-group label {
      position: absolute;
      top: 50%;
      left: 20px;
      transform: translateY(-50%);
      color: #999;
      font-size: 14px;
      pointer-events: none;
      transition: all 0.3s ease;
      background-color: #fff;
      padding: 0 5px;
    }

    .form-floating-group input:focus+label,
    .form-floating-group input:not(:placeholder-shown)+label {
      top: -8px;
      font-size: 12px;
      color: #0d6efd;
    }

    .btn-primary {
      border-radius: 50px;
      padding: 12px 30px;
      font-weight: 600;
      font-size: 16px;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    @media (max-width: 850px) {
      .card {
        width: 90%;
      }
    }
  </style>
</head>

<body>
  <div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card">
      <h3 class="text-center mb-4 fw-bold text-primary">Create Account</h3>

      <form id="signupForm" action="/user/signup" method="POST">
        <div class="row">
          <div class="col-md-6">
            <div class="form-floating-group">
              <input type="text" name="fullName" placeholder="Full Name" required>
              <label>Full Name</label>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-floating-group">
              <input type="email" name="email" placeholder="Email" required>
              <label>Email</label>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-floating-group">
              <input type="date" name="dob" placeholder="Date of Birth">
              <label>Date of Birth</label>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-floating-group">
              <input type="text" name="phone" placeholder="Phone Number">
              <label>Phone Number</label>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-floating-group">
              <input type="password" id="password" name="password" placeholder="Password" required>
              <label>Password</label>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-floating-group">
              <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
              <label>Confirm Password</label>
            </div>
          </div>
        </div>

        <div class="text-center mt-3">
          <button type="submit" class="btn btn-primary fw-semibold">Sign Up</button>
        </div>
      </form>

      <p class="text-center mt-3 mb-0">
        Already have an account?
        <a href="/user/signin" class="text-decoration-none">Login</a>
      </p>
    </div>
  </div>

  <script>
    document.getElementById("signupForm").addEventListener("submit", function (e) {
      const password = document.getElementById("password").value;
      const confirmPassword = document.getElementById("confirmPassword").value;

      if (password !== confirmPassword) {
        e.preventDefault();
        alert("Passwords do not match!");
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>
</body>

</html>
