<!doctype html>
<html lang="en">

<head>
  <title>Login</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background: #f9fafb;
      font-family: 'Segoe UI', sans-serif;
    }

    .card {
      width: 400px;
      border-radius: 16px;
      padding: 2.5rem;
      background: #fff;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      transition: all 0.4s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .form-floating-group {
      position: relative;
      margin-bottom: 1.5rem;
    }

    .form-floating-group input {
      width: 100%;
      border-radius: 50px;
      border: 1px solid #ccc;
      padding: 14px 20px;
      font-size: 14px;
      background: transparent;
      transition: all 0.3s ease;
    }

    .form-floating-group input:focus {
      border-color: #0d6efd;
      outline: none;
    }

    .form-floating-group label {
      position: absolute;
      top: 50%;
      left: 20px;
      transform: translateY(-50%);
      color: #999;
      font-size: 14px;
      pointer-events: none;
      transition: all 0.3s ease;
      background-color: #fff;
      padding: 0 5px;
    }

    .form-floating-group input:focus+label,
    .form-floating-group input:not(:placeholder-shown)+label {
      top: -8px;
      font-size: 12px;
      color: #0d6efd;
    }

    .btn-google {
      border-radius: 50px;
      border: 1px solid #ddd;
      background-color: #fff;
      color: #333;
      font-weight: 500;
      padding: 12px 20px;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1rem;
    }

    .btn-google i {
      margin-right: 8px;
    }

    .btn-google:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      background-color: #f8f9fa;
    }

    .btn-primary {
      border-radius: 50px;
      padding: 12px 30px;
      font-weight: 600;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .logo-wrapper {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      overflow: hidden;
      margin: 0 auto 1rem;
      border: 2px solid #e9ecef;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .logo-wrapper img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @media (max-width: 450px) {
      .card {
        width: 90%;
      }
    }
  </style>
</head>

<body>
  <div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card">
      
      <!-- Logo -->
      <div class="logo-wrapper">
        <img src="/images/mainlogo.png" alt="Logo">
      </div>

      <h3 class="text-center fw-bold mb-2">Welcome Back</h3>
      <p class="text-center text-muted mb-4">Glad to see you again! Login to your account below</p>

      <!-- Show Error/Success -->
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger py-2"><%= error %></div>
      <% } %>
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success py-2"><%= success %></div>
      <% } %>

      <!-- Google Button -->
      <a href="/auth/google" class="btn btn-google w-100">
        <i class="bi bi-google"></i> Continue with Google
      </a>

      <h6 class="text-center mb-3">Or login with email</h6>
      
      <!-- Login Form -->
      <form action="/user/signin" method="POST">
        <div class="form-floating-group">
          <input type="email" name="email" placeholder="Email" required>
          <label>Email</label>
        </div>
        <div class="form-floating-group">
          <input type="password" name="password" placeholder="Password" required>
          <label>Password</label>
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-2">Login</button>
      </form>

      <p class="text-center mt-3 mb-0">
        Donâ€™t have an account?
        <a href="/user/signup" class="text-decoration-none">Sign up for Free</a>
      </p>
    </div>
  </div>

  <!-- Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
