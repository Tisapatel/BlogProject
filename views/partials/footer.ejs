<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

<!-- Footer -->
<footer class="footer bg-white border-top mt-5 pt-5 pb-3">
  <div class="container">
    <div class="row">
      
      <!-- Logo + Description -->
      <div class="col-md-3 mb-4 text-start">
        <a href="/" class="d-flex align-items-center text-dark text-decoration-none">
          <img src="/images/mainlogo.png" alt="Enjoyee Logo" height="60" class="me-2">
        </a>
        <p class="text-muted small mt-2">
          Enjoy Design — the comprehensive design system solution that revolutionizes the way you create digital experiences.
        </p>
      </div>

      <!-- Company -->
      <div class="col-md-2 mb-4 text-start">
        <h6 class="fw-bold mb-3">Company</h6>
        <ul class="list-unstyled">
          <li><a href="#" class="text-muted text-decoration-none">Terms & Conditions</a></li>
          <li><a href="#" class="text-muted text-decoration-none">Privacy Policy</a></li>
          <li><a href="#" class="text-muted text-decoration-none">Project Protection</a></li>
          <li><a href="#" class="text-muted text-decoration-none">FAQs</a></li>
        </ul>
      </div>

      <!-- Help -->
      <div class="col-md-2 mb-4 text-start">
        <h6 class="fw-bold mb-3">Help</h6>
        <ul class="list-unstyled">
          <li><a href="#" class="text-muted text-decoration-none">Getting Started</a></li>
          <li><a href="#" class="text-muted text-decoration-none">Feedback</a></li>
          <li><a href="#" class="text-muted text-decoration-none">Referral Program</a></li>
          <li><a href="#" class="text-muted text-decoration-none">Network Status</a></li>
          <li><a href="#" class="text-muted text-decoration-none">FAQ</a></li>
        </ul>
      </div>

      <!-- Email + Social -->
      <div class="col-md-5 mb-4 text-start">
        <h6 class="fw-bold mb-3">Email</h6>
        <form class="d-flex mb-3" action="#" method="post">
          <input type="email" class="form-control rounded-start" placeholder="Enter your email" required>
          <button type="submit" class="btn btn-primary rounded-end ms-2">Subscribe</button>
        </form>
        <div class="d-flex">
          <a href="#" class="btn btn-outline-dark btn-sm rounded-circle me-2"><i class="bi bi-facebook"></i></a>
          <a href="#" class="btn btn-outline-dark btn-sm rounded-circle me-2"><i class="bi bi-twitter"></i></a>
          <a href="#" class="btn btn-outline-dark btn-sm rounded-circle me-2"><i class="bi bi-linkedin"></i></a>
          <a href="#" class="btn btn-outline-dark btn-sm rounded-circle me-2"><i class="bi bi-whatsapp"></i></a>
          <a href="#" class="btn btn-outline-dark btn-sm rounded-circle"><i class="bi bi-instagram"></i></a>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-top pt-3 text-center">
      <small class="text-muted">© <%= new Date().getFullYear() %> Enjoy Design. All rights reserved.</small>
    </div>
  </div>
</footer>

<!-- Bootstrap JS Bundle (with Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Optional: FontAwesome (replace kit-id) -->
<script src="https://kit.fontawesome.com/your-kit-id.js" crossorigin="anonymous"></script>
</body>
</html>
